{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/(sitemap\\.xml|feed\\.xml)",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/(sitemap\\.xml|feed\\.xml)", "destination": "/$1" },

    /* Главный SPA-fallback: всё остальное отдаём через index.html */
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
