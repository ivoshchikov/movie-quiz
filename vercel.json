cat > vercel.json <<'JSON'
{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(sitemap\\.xml|feed\\.xml)",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(sitemap\\.xml|feed\\.xml)", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
JSON